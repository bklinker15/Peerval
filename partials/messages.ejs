<% if(success_msg){%>
    <div  style="color: #2eff22"><%=success_msg%></div>
<%}%>
<% if(error_msg){%>
    <div  style="color: #ff4046"><%=error_msg%></div>
<%}%>
<%if(error){%>
<div  style="color: #ff4046"><%=error%></div>
<%}%>

<% if(errors){
    for(var i = 0; i < errors.length; i++){
        %>
            <div style="color: #ff4046"><%=errors[i].msg%></div>
        <%
    }
}%>